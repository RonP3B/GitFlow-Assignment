<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/assets/images/mainIcon.png" />
    <link
      rel="stylesheet"
      href="/styles/css/libs/bootstrap/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/styles/css/styles.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <title>Movies Manager</title>
  </head>
  <body>
    <header class="header">
      <nav class="header__nav">
        <a href="/{{#if isAuthenticated}}movies{{/if}}" class="header__nav__logo">
          <img src="/assets/images/mainIcon.png" alt="logo" />
          <p>Movies Manager</p>
        </a>
        <!-- Mobile dropmenu icon -->
        <input type="checkbox" class="header__nav__check" />
        <iconify-icon
          class="header__nav__menu-icon"
          icon="ant-design:menu-outlined"
        ></iconify-icon>
        <!-- Desktop Menu -->
        <ul class="header__nav__list">
          {{#if isAuthenticated}}
            <li><a href="/movies">Home</a></li>
            <li><a href="/movies/add-movie">Add</a></li>
            <li><a href="/movies/about">About</a></li>
            <li><a href="/log-out">Log out</a></li>
          {{else}}
            <li><a href="/movies/about">About</a></li>
          {{/if}}
        </ul>
      </nav>
    </header>
    <main class="main">
      {{{body}}}
    </main>
    <footer class="footer">
      <h4>
        Created by
        <strong>Roniell Pérez</strong>
        ©
      </h4>
      <ul class="footer__social">
        <li>
          <a href="https://github.com/RonP3B" target="_blank">
            <iconify-icon
              class="footer__social__icon"
              icon="akar-icons:github-fill"
            ></iconify-icon>
          </a>
        </li>
        <li>
          <a href="https://t.me/RoniellPB" target="_blank">
            <iconify-icon
              class="footer__social__icon"
              icon="akar-icons:telegram-fill"
            ></iconify-icon>
          </a>
        </li>
        <li>
          <a
            href="https://www.linkedin.com/in/roniell-p%C3%A9rez-967882229/"
            target="_blank"
          >
            <iconify-icon
              class="footer__social__icon"
              icon="akar-icons:linkedin-box-fill"
            ></iconify-icon>
          </a>
        </li>
      </ul>
    </footer>
  </body>

  <script src="/js/libs/bootstrap/bootstrap.min.js"></script>

  <script
    src="https://code.iconify.design/iconify-icon/1.0.0/iconify-icon.min.js"
  ></script>

  <script src="/js/libs/jquery/jquery-3.6.0.min.js"></script>

  <script
    type="text/javascript"
    src="https://cdn.jsdelivr.net/npm/toastify-js"
  ></script>

  {{! Backend toasts }}
  {{#if hasMessages}}
    <script src="/js/backendToast.js"></script>
    {{#each messages}}
      <script type="text/javascript">
        showBackendToast({{{json this}}})
      </script>
    {{/each}}
  {{/if}}
  {{! Backend toasts }}

  <script src="/js/index.js" type="module"></script>
</html>